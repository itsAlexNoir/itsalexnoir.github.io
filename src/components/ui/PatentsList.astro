---
import type { Patent } from '@/types/cv';
import { highlightAuthor } from '@/lib/utils'

interface Props {
	elements: Patent[]
}

const { elements } = Astro.props
---
<ul class='space-y-8'>
  {elements.map((element) => (
    <li class='group'>
      <h3 class='text-lg font-bold mb-2'>{element.title}</h3>
      <p class='text-base mb-2'>
        <span class='font-medium'>Authors:</span>{' '}
        <span
          set:html={highlightAuthor(element.authors)}
        />
      </p>
      <p class='text-base mb-2'>
        <span class='font-medium'>Patent Number:</span> {element.patentNumber}
      </p>
      <p class='text-base text-gray-500'>
        {element.office} ({element.time})
      </p>
    </li>
  ))}
</ul>
