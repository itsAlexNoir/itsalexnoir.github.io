---
import Layout from "@/layouts/Layout.astro";
import { patents } from "@/data/cv";
import { highlightAuthor } from "@/lib/utils";
import {template} from "@/settings";

const ALL_PATENTS = patents;
---

<Layout title="Patents">
  <div class="prose max-w-none">
    <h1 class="text-3xl font-bold mb-8">Patents</h1>

    <div class="space-y-8">
      {
        ALL_PATENTS.map((patent) => (
          <div class="card bg-base-200">
            <div class="card-body">
              <h2 class="card-title text-xl">
                {patent.title}
              </h2>
              <p class="text-base mb-2">
                <span class="font-medium">Authors:</span>{" "}
                <span set:html={highlightAuthor(patent.authors)} />
              </p>
              <p class="text-sm mb-1">
                <span class="font-medium">Patent Number:</span> {patent.patentNumber}
              </p>
              <p class="text-sm mb-3">
                <span class="italic">{patent.office}</span> â€¢ {patent.time}
              </p>
              {patent.link && (
                <div class="card-actions justify-end mt-4">
                  <a href={patent.link} target="_blank" rel="noopener noreferrer" class="btn btn-sm btn-primary">
                    View Patent
                  </a>
                </div>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
